{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "esModuleInterop": true,
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@apis/*": ["src/apis/*"],
      "@routes/*": ["src/routes/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/utils/*"],
      "@/*": ["src/*"],
    },
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}